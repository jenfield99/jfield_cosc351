package assignment1;
import java.util.Scanner;

public class Assignment1 {

    /**
     * @author Jennifer Field
     * @since 2020-02-11
     * @version 1.0
     * The main function of this creates an instance of the two subclasses
     * It asks the users to input the information
     * which is printed.
     */

    public static void main(String[] args) {

        Scanner userInput = new Scanner(System.in);

        Person myPerson = new Person();
        Medicine myMedicine = new Medicine();

        boolean personInput = false;
        boolean medInput = false;

        //the loop allows for user input
        //it is repeated for each variable
        do {
            System.out.println("Enter the person's first name (2-20 characters): ");
            String fName = userInput.nextLine();

            //the string is stored into the contact
            personInput = myPerson.setFirstName(fName);
        } while(!personInput);

        do {
            System.out.println("Enter the person's last name (2-20 characters): ");
            String lName = userInput.nextLine();

            personInput = myPerson.setLastName(lName);
        } while(!personInput);

        do {
            System.out.println("Enter the person's date of birth(yyyy-mm-dd): ");
            String dob = userInput.nextLine();

            personInput = myPerson.setDateOfBirth(dob);
        } while(!personInput);

        //prints the above info on the person

        System.out.println("Name: " + myPerson.getFirstName() + " " + myPerson.getLastName());
        System.out.println("Date of Birth: " + myPerson.getDateOfBirth());

        //begins taking information about the medicine

        do {
            System.out.println("Enter the name of the medicine (2-25 characters): ");
            String mName = userInput.nextLine();

            medInput = myMedicine.setName(mName);
        } while(!medInput);

        do {
            System.out.println("Enter the name of the manufacturer (2-25 characters): ");
            String manufacturer = userInput.nextLine();

            medInput = myMedicine.setManufacturer(manufacturer);
        } while (!medInput);

        do {
            System.out.println("Enter the expiration date (yyyy-mm-dd): ");
            String expDate = userInput.nextLine();

            medInput = myMedicine.setExpirationDate(expDate);
        } while (!medInput);

        do {
            System.out.println("Enter the quantity: ");
            int amount = Integer.parseInt(userInput.nextLine());

            medInput = myMedicine.setQuantity(amount);
        } while (!medInput);

        do {
            System.out.println("Enter the unit(mL/g/capsules): ");
            String unit = userInput.nextLine();

            medInput = myMedicine.setUnit(unit);
        } while (!medInput);

        System.out.println("Medicine");
        System.out.println("Name: " + myMedicine.getName());
        System.out.println("Manufacturer: " + myMedicine.getManufacturer());
        System.out.println("Expiration Date: " + myMedicine.getExpirationDate());
        System.out.println("Quantity: " + myMedicine.getQuantity());
        System.out.println("Unit: " + myMedicine.getUnit());

        userInput.close();

        }
    }
